<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/card_view_margin"
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:layout_marginRight="@dimen/text_view_default_margin"
                android:layout_marginTop="@dimen/text_view_default_margin"
                android:layout_marginLeft="@dimen/text_view_default_margin"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_view_main_title_font_size"
                android:id="@+id/tv_name"
                android:maxLines="1"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/text_view_default_margin"
                android:layout_marginRight="@dimen/text_view_default_margin"
                android:layout_marginTop="@dimen/text_view_default_margin"
                android:id="@+id/tv_ip"
                android:maxLines="1"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/text_view_default_margin"
                android:layout_marginRight="@dimen/text_view_default_margin"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="@dimen/text_view_default_margin"
                android:id="@+id/tv_version"
                android:maxLines="1"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>